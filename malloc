#include <stdio.h>
#include <stdlib.h>

int main() {
    int *ptr;
    int i;
    ptr = (int *)malloc(3 * sizeof(int));

    if (ptr == NULL) {
        printf("Memory not allocated.\n");
        return 0;
    }

    for (i = 0; i < 3; i++)
        ptr[i] = i + 1;

    printf("Using malloc:\n");
    for (i = 0; i < 3; i++)
        printf("%d ", ptr[i]);

    free(ptr);
    return 0;
}
